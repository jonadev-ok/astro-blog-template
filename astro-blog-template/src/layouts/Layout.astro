---
import "../styles/global.css";
import Header from "../components/componentsLayout/Header.astro";
import Footer from "../components/componentsLayout/Footer.astro";

const {
  title = "JD - Blog",
  description = "A simple and customizable blog theme built with Astro",
  image = "/og-image.png",
  faviconSvg = "/favicon.svg",
  faviconIco = "/favicon.ico",
  url = "https://astro-blog-template.vercel.app/",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={faviconSvg} />
    <link rel="icon" href={faviconIco} />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />
    <meta property="og:image" content={new URL(image, url).href} />
    <meta property="og:site_name" content="JD Blog" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, url).href} />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html {
    background-color: #000000;
  }
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
