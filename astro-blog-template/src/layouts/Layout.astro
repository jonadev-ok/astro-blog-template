---
import "../styles/global.css";
import Header from "../components/componentsLayout/Header.astro";
import Footer from "../components/componentsLayout/Footer.astro";

const {
  title = "JD - Blog",
  description = "Un tema de blog sencillo y personalizable creado con Astro",
  faviconSvg = "/favicon.svg",
  faviconIco = "/favicon.ico",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={faviconSvg} />
    <link rel="icon" href={faviconIco} />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html {
    background-color: #000000;
  }
  ,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
