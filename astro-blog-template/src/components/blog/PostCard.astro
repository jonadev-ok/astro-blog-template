---
export interface Props {
  title: string;
  description: string;
  date: Date;
  slug: string;
  tags?: string[];
}

const { title, description, date, slug, tags = [] } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<article
  class="group
    relative
    w-full
    rounded-2xl
    bg-zinc-900/60
    p-6
    transition
    hover:bg-zinc-900/80
    hover:shadow-xl
    hover:shadow-black/30"
>
  <a href={`/blog/${slug}`} class="absolute inset-0 z-10" aria-label={title}
  ></a>

  <div class="relative z-20">
    <!-- Meta -->
    <div class="mb-3 flex items-center gap-3 text-sm text-zinc-400">
      <time datetime={date.toISOString()}>
        {formattedDate}
      </time>

      {
        tags.length > 0 && (
          <span class="flex gap-2">
            {tags.slice(0, 2).map((tag) => (
              <span
                class="
                rounded-full
                bg-zinc-800
                px-2
                py-0.5
                text-xs
                text-zinc-300
              "
              >
                #{tag}
              </span>
            ))}
          </span>
        )
      }
    </div>

    <!-- Title -->
    <h2
      class="text-xl
        font-semibold
        leading-snug
        text-zinc-100
        transition
        group-hover:text-violet-400"
    >
      {title}
    </h2>

    <!-- Description -->
    <p class="mt-3 text-sm leading-relaxed text-zinc-400">
      {description}
    </p>
  </div>
</article>
