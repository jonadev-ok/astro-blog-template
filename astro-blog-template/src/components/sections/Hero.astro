---
import TitleContainer from "../ui/TitleContainer.astro";
import ParagraphContainer from "../ui/ParagraphContainer.astro";
import { Image } from "astro:assets";
import Button from "../ui/Button.astro";

interface Props {
  title: string;
  subtitle?: string;
  image?: ImageMetadata;
  imageAlt?: string;
  primaryAction?: {
    href: string;
    label: string;
  };
  secondaryAction?: {
    href: string;
    label: string;
  };
  className?: string;
}

const {
  title,
  subtitle,
  image,
  imageAlt = "Hero image",
  primaryAction,
  secondaryAction,
  className = "",
} = Astro.props;
---

<section
  class="flex justify-between items-center overflow-hidden max-w-full py-10"
>
  <div class="flex flex-col w-150">
    <TitleContainer>
      {title}
    </TitleContainer>

    {subtitle && <ParagraphContainer>{subtitle}</ParagraphContainer>}

    {
      (primaryAction || secondaryAction) && (
        <div class="flex flex-row mt-6 gap-4">
          {primaryAction && (
            <Button
              href={primaryAction.href}
              label={primaryAction.label}
              target="_blank"
            />
          )}

          {secondaryAction && (
            <Button href={secondaryAction.href} label={secondaryAction.label} />
          )}
        </div>
      )
    }

    <slot />
  </div>

  {
    image && (
      <div class="flex flex-col">
        <Image
          src={image}
          decoding="async"
          loading="lazy"
          alt={imageAlt}
          class={`md:flex max-sm:hidden ${className}`}
        />
      </div>
    )
  }
</section>
